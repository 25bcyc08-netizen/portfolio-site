{
  "version": 2,
  // run npm install inside backend directory instead of root
  "installCommand": "cd backend && npm install",
  "buildCommand": "cd backend && npm install",
  "public": true,
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    },
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1.js"
    }
  ]
}
