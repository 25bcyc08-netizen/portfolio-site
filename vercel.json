{
  "version": 2,
  "installCommand": "cd backend && npm install",
  "buildCommand": "cd backend && npm install",
  "public": true,
  "builds": [
    {
      "src": "backend/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/contact",
      "dest": "/backend/api/contact.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/messages",
      "dest": "/backend/api/messages.js",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/(.*)\\.(js|css|svg|png|jpg|jpeg|gif|ico)$",
      "dest": "/frontend/$1.$2"
    },
    {
      "src": "/.*",
      "dest": "/frontend/index.html"
    }
  ]
}
